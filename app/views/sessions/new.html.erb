<h1 class="mt-3 ml-3">ログイン</h1>
<%= form_with scope: :session, local: true do |f| %>
  <div class="form-group mt-3 ml-3 mr-5">
  <%= f.label :email, 'メールアドレス' %> 
  <%= f.text_field :email, class: 'form-control', id: 'session_email' %> 
  </div>
  <div class="form-group ml-3 mr-5">
  <%= f.label :password, 'パスワード' %>
  <%= f.password_field :password, class: 'form-control', id: 'session_password' %>
  </div>
  <div class="mt-3 ml-3">
  <%= f.submit 'ログインする', class: 'btn btn-primary' %>
  </div>
<% end %>

<div class="text-right mr-3">
  <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
    <%= f.hidden_field :email, :value => 'sample@gmail.com' %>
    <%= f.hidden_field :password, :value => 'password' %>
    <!--<%= f.submit 'かんたんログイン', class: 'btn btn-secondary btn-test' %>-->
    <%= f.submit 'かんたんログイン', class: 'btn btn-secondary btn-info' %>
  <% end %>
</div>