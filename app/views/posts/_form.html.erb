<% if post.errors.present? %>
  <ul id="error_explanation">
    <% post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  </ul>
      <% end %>

<%= form_with model: post, local: true do |f|%>
<div class="form-group ml-3 mr-5">
  <%= f.label :name %> 
  <%= f.text_field :name, class: 'form-control', id: 'post_name' %> 
</div>
<div class="form-group ml-3 mr-5">
  <%= f.label :description %> 
  <%= f.text_area :description, rows: 5, class: 'form-control', id: 'post_description' %>
</div>
<div class="form-group ml-3  mr-5">
  <%= f.label :image %>
  <%= f.file_field :image, class: 'form-control' %>
</div>
<%= f.submit nil, class: 'btn btn-primary ml-3' %>
<% end %>
